@using CourseManagement.Constants
@using CourseManagement.Domain.Users.Helpers
@using CourseManagement.Helpers
@model SearchCondition

<form
    id="frmSearch"
    data-ajax="true"
    data-ajax-method="get"
    data-ajax-update="#tblUsers tbody"
    data-ajax-mode="replace"
    data-ajax-success="loadPagination()"
    data-ajax-url="@Url.Action("Search", WebConstants.CONTROLLER_USERS)">

    <div class="row mb-2">
        <div class="col-md-2 mb-2">
            <label>Người dùng</label>
            @Html.TextBoxFor(
                model => model.SearchWord,
                new { @class = "form-control form-control-md", @type="search", @maxlength=100, @autocomplete="off" })
        </div>
        <div class="col-md-2 mb-2">
            <label>Vai trò</label>
            @Html.DropDownListFor(
                model => model.Role,
                new SelectList(ValueTextHelper.GetRoles(), "Value", "Text", Model.Role),
                new { @class = "select2", @style = "width: 100%;" })
        </div>
        <div class="col-md-2 mb-2">
            <label>Trạng thái</label>
            @Html.DropDownListFor(
                model => model.IsActive,
                new SelectList(ValueTextHelper.GetActivities(), "Value", "Text", Model.IsActive),
                new { @id="ddlStatus", @class = "select2", @style = "width: 100%;" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-2">
            <button type="button" id="btnSearch" class="btn btn-md btn-primary">Tìm kiếm</button>
            <a id="btnReset" class="btn btn-md btn-link">reset</a>
        </div>
        <div class="col-md-6 text-right">
            <a class="btn btn-primary" onclick="register(0)">Thêm</a>
        </div>
    </div>

    @Html.HiddenFor(model => model.PageLength)
    @Html.HiddenFor(model => model.PageNo)
    @Html.HiddenFor(model => model.OrderBy)

</form>